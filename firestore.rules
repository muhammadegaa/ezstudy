rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isTutorOrStudent(session) {
      return isAuthenticated() && (
        request.auth.uid == session.data.tutorId ||
        request.auth.uid == session.data.studentId
      );
    }

    // Users collection (user profiles)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can create/update their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Tutors collection
    match /tutors/{tutorId} {
      // Anyone can read tutors (for browsing)
      allow read: if true;
      
      // Only authenticated users can create/update their own tutor profile
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // Sessions collection
    match /sessions/{sessionId} {
      // Allow reading sessions for:
      // 1. Tutor of the session
      // 2. Student of the session
      // 3. Any authenticated user (for shareable links - students need to read before joining)
      allow read: if isAuthenticated();
      
      // Students can create sessions (with studentId set)
      allow create: if isAuthenticated() && 
        request.resource.data.studentId == request.auth.uid &&
        request.resource.data.status == 'pending';
      
      // Tutors can create sessions (with tutorId set, studentId can be empty initially)
      allow create: if isAuthenticated() && 
        request.resource.data.tutorId == request.auth.uid &&
        request.resource.data.status == 'pending';
      
      // Update rules:
      // 1. Tutor can update their own sessions
      // 2. Student can update sessions where they are the student
      // 3. Any authenticated user can update studentId/studentName/studentEmail when joining (for shareable links)
      // 4. Tutor can update peerId
      allow update: if isAuthenticated() && (
        // Tutor updating their own session
        (request.auth.uid == resource.data.tutorId) ||
        // Student updating their own session
        (request.auth.uid == resource.data.studentId) ||
        // Student joining via link - can update studentId, studentName, studentEmail, status, peerId
        (resource.data.status == 'pending' && 
         resource.data.studentId == '' &&
         request.resource.data.studentId == request.auth.uid &&
         request.resource.data.tutorId == resource.data.tutorId)
      );
      
      // Tutor or student can delete their sessions
      allow delete: if isTutorOrStudent(resource);
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

