# Firebase (see FIREBASE_SETUP.md for details)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=0:000000000000:web:0000000000000000000000

# Optional: Public App URL (auto-detected if not provided)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Giphy API key (defaults to public beta key)
# GIPHY_API_KEY=dc6zaTOxFJmzC

# WebRTC / PeerJS Signalling Server
# Set these when running your own peer server (recommended for production)
NEXT_PUBLIC_PEER_HOST=0.peerjs.com
NEXT_PUBLIC_PEER_PORT=443
NEXT_PUBLIC_PEER_PATH=/peerjs
NEXT_PUBLIC_PEER_SECURE=true
# NEXT_PUBLIC_PEER_KEY=optional_api_key
